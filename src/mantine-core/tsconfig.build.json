{
  "extends": "../../tsconfig.base.json",
  "include": ["./src", "../../configuration/types", "../../tests"],
  "exclude": [
    "./lib",
    "./esm",
    "./cjs",
    "**/*.test.tsx",
    "**/*.test.ts",
  ],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",
    "composite": true,
    "paths": {
      "@mantine/hooks": ["../mantine-hooks/src"],
      "@mantine/tests": ["../mantine-tests/src"]
    }
  },
  "references": [
    { "path": "../mantine-hooks" },
    { "path": "../mantine-tests" }
  ]
}
